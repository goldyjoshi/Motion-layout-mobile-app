<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/button"
               motion:framePosition="33" />
           <KeyAttribute
               motion:motionTarget="@+id/button"
               motion:framePosition="68"
               android:rotation="45" />
           <KeyCycle
               motion:motionTarget="@+id/button"
               motion:framePosition="90"
               motion:wavePeriod="1"
               android:elevation="3dp"
               motion:waveOffset="3dp" />
           <KeyPosition
               motion:motionTarget="@+id/button2"
               motion:framePosition="40" />
           <KeyAttribute
               motion:motionTarget="@+id/button2"
               motion:framePosition="10"
               android:rotation="45" />
           <KeyCycle
               motion:motionTarget="@+id/button"
               motion:framePosition="70"
               motion:wavePeriod="1"
               android:elevation="3dp"
               motion:waveOffset="3dp" />
           <KeyPosition
               motion:motionTarget="@+id/button3"
               motion:framePosition="30" />
           <KeyCycle
               motion:motionTarget="@+id/button"
               motion:framePosition="85"
               motion:wavePeriod="1"
               android:rotationX="5"
               motion:waveOffset="0" />
           <KeyCycle
               motion:motionTarget="@+id/button"
               motion:framePosition="49"
               motion:wavePeriod="1"
               motion:waveShape="triangle"
               android:rotation="90"
               motion:waveOffset="0" />
       </KeyFrameSet>
        <OnClick />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="@+id/button"
            motion:layout_constraintStart_toStartOf="@+id/button3" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/button"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button2"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="1dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/button3"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>
</MotionScene>